#:include tubo.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "cielo.png"
            Rectangle: #nubes
                size: self.width, 150
                pos: self.pos[0], self.pos[1] + self.height - 150
                texture: self.nube_textura
            Rectangle: #piso
                size: self.width, 100
                pos: self.pos[0], self.pos[1] 
                texture: self.sopi_textura
    Tubo:
        size_hint: None, None
        size: 70, root.height - 100
        pos: 200, 100
        tubo_center: 300
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.5
            Rectangle:
                size: self.size
                pos: self.pos

