#:include tubo.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "cielo.png"
            Rectangle: #nubes
                size: self.width, 150
                pos: self.pos[0], self.pos[1] + self.height - 150
                texture: self.nube_textura
            Rectangle: #piso
                size: self.width, 100
                pos: self.pos[0], self.pos[1] 
                texture: self.sopi_textura
    Button:
        text: "JUGAR"
        size_hint: None, None
        on_release:
            app.start_game()

